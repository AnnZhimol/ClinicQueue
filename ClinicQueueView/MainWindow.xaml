<Window x:Class="HealthcareApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация пациента" Height="400" Width="400" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация пациента" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333333"/>

            <Label Content="ФИО:" FontSize="16" Margin="0,10,0,5" Foreground="#555555"/>
            <TextBox x:Name="FullNameTextBox" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10" BorderBrush="#999999" BorderThickness="1"/>

            <Label Content="Номер документа:" FontSize="16" Margin="0,10,0,5" Foreground="#555555"/>
            <TextBox x:Name="DocumentNumberTextBox" Height="30" FontSize="14" Padding="5" Margin="0,0,0,20" BorderBrush="#999999" BorderThickness="1"/>

            <Button Content="Авторизоваться" Height="35" FontSize="16" Background="#4CAF50" Foreground="White" Cursor="Hand" Click="AuthorizeButton_Click"/>

            <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="Red" FontSize="14" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
